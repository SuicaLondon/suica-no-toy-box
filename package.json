{
  "name": "suica-no-toy-box",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky",
    "format": "prettier --config .prettierrc 'src/**/*.ts' 'src/**/*.tsx' --write",
    "db:generate-dev": "npx dotenv-cli -e .env.local -- prisma generate",
    "db:migrate-dev": "npx dotenv-cli -e .env.local -- prisma migrate dev",
    "db:studio-dev": "npx dotenv-cli -e .env.local -- prisma studio",
    "db:seed-dev": "npx dotenv-cli -e .env.local -- prisma db seed",
    "db:reset-dev": "npx dotenv-cli -e .env.local -- prisma migrate reset && npx dotenv-cli -e .env.local -- prisma migrate dev",
    "postinstall": "prisma generate",
    "vercel-build": "npx prisma generate && npx prisma migrate deploy && next build"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.3.6",
    "@hookform/resolvers": "^4.1.3",
    "@prisma/client": "^6.6.0",
    "@prisma/extension-accelerate": "^1.3.0",
    "@radix-ui/react-label": "^2.1.3",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.3",
    "@radix-ui/react-slot": "^1.1.2",
    "@tanstack/react-query": "^5.71.1",
    "ai": "^4.2.10",
    "cheerio": "^1.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.486.0",
    "next": "15.2.4",
    "openai": "^4.91.0",
    "prisma": "^6.6.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.55.0",
    "tailwind-merge": "^3.1.0",
    "tw-animate-css": "^1.2.5",
    "usehooks-ts": "^3.1.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.2.4",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "**/*": "prettier --write --ignore-unknown"
  },
  "prisma": {
    "schema": "lib/prisma/schema.prisma"
  },
  "packageManager": "pnpm@10.6.4+sha512.da3d715bfd22a9a105e6e8088cfc7826699332ded60c423b14ec613a185f1602206702ff0fe4c438cb15c979081ce4cb02568e364b15174503a63c7a8e2a5f6c"
}
